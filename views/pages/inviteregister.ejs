






<section class="auth-section">
    <div class="left-auth__section">
        <a href="#" class="logo-front">
            <img src="/assets/Svg/logo.svg">
        </a>
        <div class="section-content ui-auth-img__bg ui-use-register__bg">
        </div>
        <div class="bottom-section-content fade">
            <h1>Are you a Teacher or a student?</h1>
        </div>
    </div>
    <div class="main-auth__section">
        <div class="auth-form ui-box-sh">
           <div class="top-auth-form auth-container">
            <h2>Sign up</h2>
            <p>Setting up an account is quick and straight-forward.
                Already signed up? <a href="/u/login">Log in</a></p>
           </div>
           <hr>
           <form class="auth-container" method="POST" action="">
                <% if(typeof errors != 'undefined') { %>
                    <% errors.forEach(function(error) { %>
                        <div class="ui-alert-danger">
                            <p><%= error.msg %></p>
                        </div>
                    <% }); %>
                <% } %>
               <input type="hidden" class="uk-input" name="fullname" value="<%= user.fullname %>">
               <input type="hidden" class="uk-input" name="email" value="<%= user.email %>">

               <input type="hidden" value="<%= user.role %>" name="role">
               <input type="hidden" value="<%= user.districtid %>" name="districtid">
               <label class="uk-form-label">Password</label>
               <input type="password" class="uk-input" placeholder="Create password" name="password" required>

               <label class="uk-form-label">Password</label>
               <input type="password" class="uk-input" placeholder="Confirm password" name="password2" required>

               <div>
                <p><input class="uk-checkbox" type="checkbox" required checked> I agree to the <a href="#">Terms of Service</a></p>
                <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-top">Create my account</button>
            </div>
        </form>
        </div>
    </div>
</section>