<section class="auth-section">
    <div class="left-auth__section">
        <a href="#" class="logo-front">
            <img src="/assets/Svg/logo.svg">
        </a>
        <div class="section-content">
            <img src="/assets/Svg/3-01.svg">
        </div>
    </div>

    <div class="main-auth__section">
        <div class="auth-form ui-box-sh">
           <div class="top-auth-form auth-container">
            <h2>Almost there! ðŸ˜Š</h2>
            <p>Enter the email adress you registered with and we will email you a link to reset your password.</p>
           </div>
           <hr>
            <form action="" method="post" class="auth-container">
            
              <% if(error_msg != '') { %>
                <div class="alert-errors">
                  <div class="notify-warning">
                    <%= error_msg %>
                </div>
              <% } %>
              <% if(error != '') { %>
                <div class="alert-errors">
                    <div class="notify-warning">
                    <%= error %>
                    </div>
                </div>
              <% } %>
              <% if(success_msg != '') { %>
                  <div class="alert-success">
                    <div class="notify-success">
                    <%= success_msg %>
                    </div>
                  </div>
              <% } %>
              <input type="text" class="uk-input" placeholder="New Password" name="password">
              <div>
                <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-top">Change password</button>
              </div>
            </form>
        </div>
    </div>
</section>



